<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls"
    ios:Page.UseSafeArea="True"
    x:Class="XamarinPhoneContact.View.MobileContact">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Row="0"
                    Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                     <RowDefinition Height="Auto"/>
                      <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button IsVisible ="False" x:Name="clearButton"
                        Grid.Row="0"
                        Grid.Column="1"
                        FontSize="15"
                        FontAttributes="Bold"
                        Margin="0"
                        Padding="0,0,0,0"
                        Clicked="Handle_clear"
                        Text="Clear All">
                </Button>
                <Image x:Name="dismisbutton"
                        Aspect="AspectFit"
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,10,10,0"
                        HeightRequest="25"
                        WidthRequest="25">
                       <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="Dismiss_Selected" />
                    </Image.GestureRecognizers>
                       </Image>
                <Button x:Name="dismisbuttonText"
                        Margin="0,5,10,5"
                        Grid.Row="2"
                        Grid.Column="1"
                        FontSize="15"
                        FontAttributes="Bold"
                        Clicked="Dismiss_Selected"></Button>
            </Grid>
            <SearchBar x:Name="searchText"
                    BackgroundColor="White"
                    Grid.Row="1"
                    Grid.Column="0"
                    TextChanged="Handle_TextChanged"
                    SearchButtonPressed="Handle_SearchButtonPressed">
            </SearchBar>
            <ListView Grid.Row="2"
                    Grid.Column="0"
                    x:Name="contactList"
                      SeparatorVisibility="Default"
                      HasUnevenRows="True"
                      IsGroupingEnabled="True"
                      GroupDisplayBinding="{Binding Title}"
                      GroupShortNameBinding="{Binding ShortTitle}"
                      ItemSelected="HandleListSelected"
                      ItemTapped="HandleItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid RowSpacing="0"
                                    ColumnSpacing="0"
                                    Margin="20,20,0,20">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackLayout  Grid.Row="0"
                                              Grid.Column="0">
                                    <Label
                                        Text="{Binding DisplayName}"
                                        FontAttributes="Bold"
                                        FontSize="16"/>
                                    <Label Padding="0,10,0,10"
                                           Text="{Binding GetPhones[0].PhoneNumber}"
                                           FontSize="14"/>
                                </StackLayout>
                                <Image HeightRequest="20"
                                        WidthRequest="20"
                                        Margin="5,5,20,0"
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="1"
                                        IsVisible="{Binding Itemselcted}"
                                       Source="checkmark"
                                        Aspect="AspectFit"></Image>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Grid.Row="3"
                    Grid.Column="0"
                    x:Name="bottomLayout"
                    IsVisible="{Binding Itemselcted}"
                    Padding="0">
                <Label x:Name="LblLoadingText" VerticalTextAlignment="Center"
                        HorizontalTextAlignment="Center"
                        Padding="0,12,0,12"
                        FontAttributes="Bold"
                        FontSize="Medium"></Label>
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>